@model scenario.Models.Character

@{
    ViewBag.Title = "Usuwanie postaci";
}

<h2>@ViewBag.Title</h2>

<h3>Czy na pewno chcesz ususnąć tą postać?</h3>
<fieldset>
    <legend>Character</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Story)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Story.Title)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Description)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Selected)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Selected)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.CreatedAt)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreatedAt)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.UpdatedAt)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UpdatedAt)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Usuń" /> |
        @Html.ActionLink("Wróć do listy", "Index")
    </p>
}
