@model scenario.Models.Voting

@{
    ViewBag.Title = "Edycja głosowania";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Voting</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="display-label">
            @Html.DisplayNameFor(model => model.Story)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Story.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Open)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Open)
            @Html.ValidationMessageFor(model => model.Open)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Threads)
        </div>
        <div class="editor-field">
            @Html.ListBox("Threads")
            @Html.ValidationMessageFor(model => model.Threads)
        </div>
        <p>
            <input type="submit" value="Zapisz zmiany" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Wróć do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
